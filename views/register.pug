extends layout.pug

block content

    <div class="container-fluid min-vh-100 d-flex flex-column justify-content-center align-items-center">
        
        if success
            <div class="alert alert-success" role="alert">#{success}</div>
        if error
            <div class="alert alert-danger" role="alert">#{error}</div>

        <h2>Register</h2>
        <div class="row bg-dark text-white border-1 rounded p-3">
            <form method='post' action="/register">
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" password="email" class="form-control" name="password" id="exampleInputPassword1" placeholder="Password">
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
            <a href="/login">Login</a>
        </div>
    </div> 